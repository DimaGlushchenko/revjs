{
  "name": "revjs",
  "version": "0.0.1",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "build-docs": "npm run build-mkdocs && npm run build-typedocs",
    "build-mkdocs": "cd docs/mkdocs && docker-compose up",
    "build-typedocs": "lerna run build-docs",
    "test": "lerna run test",
    "test-ci": "lerna run test-ci",
    "pack": "lerna run pack",
    "updated": "lerna updated",
    "publish": "npm run build && npm run test && lerna publish",
    "publish-nobuild": "lerna publish",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "lerna": "2.5.1",
    "@types/chai": "4.0.10",
    "@types/enzyme": "3.1.6",
    "@types/mocha": "2.2.45",
    "@types/rewire": "2.5.28",
    "@types/sinon": "4.1.2",
    "chai": "4.1.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "jsdom": "11.5.1",
    "mocha": "4.1.0",
    "mocha-circleci-reporter": "0.0.2",
    "react-dom": "^16.0.0",
    "rewire": "3.0.2",
    "sinon": "4.1.3",
    "ts-node": "4.1.0",
    "tslint": "5.8.0",
    "tslint-no-circular-imports": "0.2.1",
    "typedoc": "0.9.0",
    "typescript": "2.6.2"
  }
}
