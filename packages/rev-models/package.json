{
  "name": "rev-models",
  "version": "0.0.1",
  "description": "RevJS Isomorphic Data Library - Core Data Model Components",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-bin tslint -p . && run-bin tsc && npm run build-docs",
    "build-watch": "run-bin tsc --watch",
    "build-docs": "run-bin typedoc --options ./typedoc.js",
    "test": "run-bin mocha -r ts-node/register --recursive \"./src/**/__tests__/*\"",
    "test-watch": "run-bin mocha -r ts-node/register --recursive \"./src/**/__tests__/*\" --watch --watch-extensions ts,tsx",
    "mocha": "run-bin mocha -r ts-node/register",
    "pack": "npm pack"
  },
  "author": "Russell Briggs <russ@paraflyer.net>",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "devDependencies": {
    "run-bin": "^1.0.0"
  }
}
